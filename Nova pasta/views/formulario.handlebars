<nav id="Formulas">
    <h1>Faça sua reserva</h1>
<form action="/reserva/add" method="POST">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" required><br><br>

    <label for="data">Data:</label>
    <input type="date" id="data" name="data" required><br><br>

    <label for="horario">Horário:</label>
    <input type="time" id="horario" name="horario" required><br><br>

    <label for="pessoas">Número de Pessoas:</label>
    <input type="number" id="pessoas" name="pessoas" min="1" required><br><br>

    <button type="submit">Fazer Reserva</button>
</form>
</nav>